{
    "watch": [
      "src/**/*.ts",
      "db/**/*.ts",
      "assets/**/*"
    ],
    "ignore": [
      "node_modules/",
      "dist/"
    ],
    "ext": "ts,js,json",
    "exec": "ts-node --esm --experimental-specifier-resolution=node src/server.ts",
    "execMap": {
      "ts": "ts-node --esm --experimental-specifier-resolution=node"
    }
  }